{
  "name": "pizza-delivery-system-app-mern-oibsip",
  "version": "1.0.0",
  "description": "A Full-Stack Web Application that simulates a Dynamic Pizza Delivery System.",
  "scripts": {
    "start": "node server/index --prefix server",
    "server": "nodemon server/index --prefix server",
    "client": "npm run dev --prefix client",
    "build": "cd client && npm run build",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install": "cd client && npm install && cd .. && cd server && npm install && cd ..",
    "data:import": "node server/seeder",
    "data:destroy": "node server/seeder -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VarshilKothiya/OIBSIP-PIZZA-DELIVERY-APPLICATION"
  },
  "keywords": [
    "nodejs",
    "mongodb",
    "reactjs",
    "expressjs",
    "mern-stack",
    "pizza-delivery-system",
    "internship-task",
    "oasis-internship",
    "oibsip"
  ],
  "author": "Varshil",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/VarshilKothiya/OIBSIP-PIZZA-DELIVERY-APPLICATION"
  },
  "homepage": "https://github.com/VarshilKothiya/OIBSIP-PIZZA-DELIVERY-APPLICATION",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "eslint": "^8.47.0",
    "nodemon": "^3.0.1"
  }
}
